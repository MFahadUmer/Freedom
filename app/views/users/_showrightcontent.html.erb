<div class="user_profile p-3 border-bottom">
  <div class="profile_image d-flex justify-content-center align-items-center">
    <%= follower_links(current_user, @user) %>
    <div class="user-profile-image pl-3">
      <%= image_check(@user.profile_image) %>
    </div>
  </div>
  <div class="d-flex flex-column border-bottom align-items-center">
    <h3><%= @user.fullname %></h3>
    <p><%= @user.username %></p>
  </div>
  <div class="user-details d-flex justify-content-between p-3 border-bottom">
    <div class="d-flex justify-content-center flex-column align-items-center border-right pr-4 user-opinions">
      <h4><%= @user.opinions.count %> </h4>
      <p>Opinions</p>
    </div>
    <div class="d-flex justify-content-center flex-column align-items-center border-right pr-4 user-followers">
      <h4><%= @user.followers.count %></h4>
      <p>Followers</p>
    </div>
    <div class="d-flex justify-content-center flex-column align-items-center user-followers">
      <h4><%= @user.followings.count %></h4>
      <p>Followings</p>
    </div>
  </div>
  <div class="user-followed-by p-3">
    <h3 class="border-bottom">Followed By</h3>
    <% @user.follower_user.each do |x|  %>
      <div class="user-followed-by-grid border-bottom p-2">
        <div class="user-followed-by-image">
          <%= link_to image_tag(x.profile_image,  class: 'w-100 h-100 rounded'), user_path(x.id) %>
        </div>
        <div class="d-flex justify-content-between align-items-center">
          <h4><%= x.username %></h4>
          <%= follower_links(current_user, x) %>
        </div>
      </div>
    <% end %>
  </div>
</div>
