<div class="p-3">
  <div class="p-3 border-bottom bg-white">
    <%= form_tag(opinions_path, method: "post") do %>
      <div class="form-group">
        <%= label_tag(:opinion, 'Write your Opinion') %>
        <%= text_area_tag :opinion, "", class: 'form-control', autofocus: "true", rows: "2" %>
      </div>
      <div class="form-group">
        <%= submit_tag('Post your Opinion', class: "btn btn-primary") %>
      </div>
    <% end %>
  </div>
</div>